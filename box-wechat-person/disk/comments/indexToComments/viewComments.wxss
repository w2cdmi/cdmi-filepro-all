page {
    background-color: #f8f8f8;
}

.all_contair {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid rgba(9, 9, 9, 0.2);
    display: flex;
}

.loadMore {
    height: 87rpx;
    text-align: center;
    line-height: 87rpx;
    color: #666;
    margin-bottom: 20rpx;
}

.avatar_img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.comment_txt {
    margin-left: 13rpx;
}

.comm_contair {
    float: left;
    height: 90rpx;
}

.file_info_contair {
    float: right;
}

.time_txt {
    margin-top: 9rpx;
}

.con_contair {
    float: left;
}

.cotent_txt {
    display: block;
    color: #333;
    font-size: 24rpx;
    margin-top: 9rpx;
    width: 470rpx;
    white-space: normal;
    word-wrap: break-word;
    word-break: break-all;
}

.content-style{
     display: flex;
     justify-content: space-between;
     width:590rpx;
}

.file_image_size {
    width: 88rpx;
    height: 93rpx;
    border-radius: 12rpx;
    overflow: hidden;
}

.vip_icon {
    width: 18rpx;
    height: 15rpx;
    display: inline-block;
    margin-left: 10rpx;
}

.file_title {
    margin-top: -5rpx;
}

.comm_txt {
    font-size: 24rpx;
    display: block;
    color: #999;
    width: 100rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    /* white-space: nowrap; */
}
