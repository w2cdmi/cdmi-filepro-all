@import 'style/weui.wxss';
/* 整体页面样式 */
page {
    height: 100%;
    margin: 0;
    background-color: #f5f5f5;
    font-size: 14px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 页面布局 */
.page {
    height: 100%;
    width: 100%;
    background: #f5f5f5;
    font-size: 28rpx;
    margin: 0;
}
.view-bg {
    background: #fff;
    padding: 20rpx 30rpx;
}
.view-up-down-space {
    padding: 20rpx 0;
}

.font-big {
    font-size: 14px;
}
.font-middle {
    font-size: 13px;
    color: #666;
}
.font-small {
    font-size: 12px;
    color: #999;
}

/* weui样式 */
.weui-media-box::before {
    border-top: 1px solid #e5e5e5;
}
.weui-navbar {
    background: #fff;
}
.cell_2 {
  width: 100%;
  /* height: 100rpx; */
  background: #fff;
  position: relative;
  overflow-x: scroll;
  overflow-y: hidden;
  /* border-bottom: 1rpx solid #ececec; */
}

/* 背景样式 */
.blankBackground {
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    height: 230px;
}
.blankBackground image {
    width: 250px;
    height: 200px;
    position: relative;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
}
.blankBackground view {
    font-size: 14px;
    color: #a9a9a9;
    text-align: center;
}

/* 清掉button样式 */
.clear-button-style {
    padding: 0;
    background: #fff;
    border: none;
    margin: 0;
}
.clear-button-style::after {
    border: none;
}
/*点击按钮背景色*/
.button-hover{
    background:#f5f5f5;
}

/* 按钮 */
.view-button {
    font-size: 14px;
    margin-bottom: 30rpx;
    padding: 20rpx 30rpx;
    background: #ea5036;
    padding-left: 30rpx;
    text-align: center;
    color: #fff;
    margin: 30rpx 30rpx;
    border-radius: 10rpx;
}