.file_tool_item {
  padding-left: 10px;
}
.crumbshide{
  display: none;
}
.file_tool_order_item {
  padding-left: 5px;
}
::-webkit-scrollbar {/*隐藏滚轮*/
    display: none;
}
.file_tool image {
  width: 12px;
  height: 12px;
}
.weui-flex{
  overflow: scroll;
}
/*面包屑*/
#breadcrumb {
  display: inline-flex;
  height: 40px;
}
#breadcrumb .icon {
  font-size: 14px;
}
#breadcrumb .crumb-name{
  display: inline-flex;
}
#breadcrumb .crumb-name image{
  width: 15px;
  height: 40px;
  float: left;
}
#breadcrumb .crumb-name .weui-flex__item {
  float: left;
  background: #ffffff;
  text-decoration: none;
  position: relative;
  height: 40px;
  line-height: 40px;
  padding: 0 10px 0 10px;
  text-align: center;
  font-size: 14px;
  color: #5B8CFF;
}

#breadcrumb .crumb-name .weui-flex__item text{
  float: left;
  max-width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
#breadcrumb .crumb-name:last-child .weui-flex__item{
  color: #000000;
}

/*给分享按钮加样式*/
.weui-media-box{
  position: relative;
}
.weui-media-box__bd_in-appmsg .weui-media-box__title{
    width:200px;
    float:left;
    display:inline-block;
}
.weui-media-box__bd_in-appmsg button{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    display:inline-block;
    background: none;
    padding: 0;
    line-height: normal;
    width:60px;
    border:none;
}
.weui-media-box__bd_in-appmsg button::after{
  border: none;
}
.weui-media-box__bd_in-appmsg button image{
  width: 20px;
  height: 20px;
  float: right;
  margin: 25px 15px 0 0;
}
.weui-media-box .buttonhide{
  display: none;
}

.weui-panel{
  margin-top: 0;
}

