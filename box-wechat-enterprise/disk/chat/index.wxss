/* disk/chat/index.wxss */
.weui-grids {
    border: 1rpx solid #d9d9d9;
}

.weui-grid {
    padding: 1px 1px;
    border: 0px;
}

.weui-grid__icon {
    width: 16px;
    height: 16px;
}

.grid_icon {
    width: 45px;
    height: 45px;
}

.weui-panel__bd {
    border-bottom: solid 1px #d9d9d9;
}

.message-tips-number{
    height:20px;
    width:24px;
    border-radius:42%;
    font-size:10px;
    color:#fff;
    display:inline-block;
    background:red;
    text-align:center;
    float: right;
    line-height:22px;
}
.message-recent{
    display:inline-block;
    width:88%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    line-height:20px;
}
.sessions-list{
    display:inline-block;
    width:100%;
    height:20px;
}
.session-time{
    float:right;
    font-size:11px;
    color: #666666;
    height:27px;
    line-height:27px;
}
.session-bg{
    background: #fff;
}
.chat-options{
    display: flex;
    position:absolute;
    top:0px;
    width:100%;
    z-index:5;
    background-color:#F8F8F8;
    height:40px;
    border-bottom:1px solid #e5e5e5;
    box-shadow:4px 2px 2px #F5F5F5;
}
.main{
    height:100%;
    overflow:auto;
    box-sizing:border-box;
}
.main view::selection{
    background: red;
}
.chat-options button{
    width:50%;
    background:none;
    line-height: 40px;
    font-size:14px;
    color: #666;
}
.rightLine::after{
    content:"";
    border-right:2rpx solid #999;
    height:40px;
    border-radius:0;
    width:0px;
    top:10px;
}
.operation-menu{
    position:absolute;
    z-index:10;
    background:#fff;
    box-shadow:2px 2px 5px #e5e5e5;
    width:230rpx;
    top:20px;
    left:20px;
    opacity:0.8;
}
.operation-menu view{
    padding: 10px;
    font-size: 14px;
}

@import "../template/menu.wxss";
@import "../template/music.wxss";