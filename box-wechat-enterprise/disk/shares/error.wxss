/* disk/error/error.wxss */
.error{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.share-header{
  height: 36px;
  /* width: 100%; */
  padding: 12px 10px;
  line-height: 36px;
}
.share-header image{
  width: 48px;
  height: 36px;
  float: left;
}
.share-header-left{
  float: left
}
.share-header-right{
  float: right;
}
.share-blank{
  background: #EEF2F5;
  width: 100%;
  height: 20px;
}

.error-middle{
  width: 100%;
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
}
.error-middle image{
  width: 100px;
  height: 100px;
  position: absolute;
  top: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
}
.error-middle [class^="error-middle-"]{
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}
.error-middle-h1{
  margin-top: 120px;
}
.error-middle-p{
  font-size: 10px;
  color: #999999;
}
.share-tail{
  width: 100%;
  position: fixed;
  bottom: 0;
  text-align: center;
  color: #999999;
  font-size: 10px;
}