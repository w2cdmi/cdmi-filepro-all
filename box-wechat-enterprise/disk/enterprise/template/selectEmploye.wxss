/* disk/enterprise/template/selectEmploye.wxss */

.department-title {
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.serach-bg {
    background: #f5f5f5;
    display: flex;
}

.view-serach-icon {
    height: 38rpx;
}

.search-input-bg {
    background: #fff;
    border-radius: 1.5em;
    height: 70rpx;
    width: 480rpx;
    display: flex;
    align-items: center;
    padding-left: 32rpx;
}

.serach-icon {
    width: 38rpx;
    height: 38rpx;
}

.show-serach {
    width: 20rpx;
    height: 20rpx;
    margin-left:6rpx;
}
.serach-input{
    width:400rpx;
    margin-left:14rpx;
}
.serach-department-view{
    display:flex;
    align-items:center;
    margin-left:14rpx;
}
.company-name{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width:140rpx;
}
.department-list{
    color: #666;
    border-bottom: 1px solid #f5f5f5;
}
.border-bottom{
    border-bottom: 1px solid #f5f5f5;
}
.department-group{
    padding: 20rpx 30rpx;
    display: flex;
    align-items:center;
background:#fff;
}
.img-icon{
    height:40rpx;
    width:40rpx;
}
.margin-right{
    margin-right:20rpx;
}
.view-select-icon{
    height:40rpx;
}
.department-info{
    display:flex;
    align-items:center;
}
.department-icon{
    width:80rpx;
    height:80rpx;
}
.department-description{
    font-size:26rpx;
    color:#666;
}
.sure-button{
    margin:10rpx 30rpx;
    text-align:center;
    background:#ea5036;
    height:70rpx;
    border-radius:1.5em;
    color:#fff;
    line-height:70rpx;
}
.view-department-icon{
    height:80rpx;
}